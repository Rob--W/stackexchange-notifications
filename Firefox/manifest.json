{
    "name": "Desktop Notifications for Stack Exchange",
    "description": "Real-time desktop notifications for the Stack Exchange.",
    "homepage_url": "https://stackapps.com/q/3780/9699",
    "version": "1.6.12",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "localStorage-proxy.js",
            "stackexchange-inbox-api.js",
            "stackexchange-inbox-api-chrome.js",
            "using-websocket.js"
        ]
    },
    "content_scripts": [{
        "matches": ["https://stackexchange.com/oauth/login_success?robw&*"],
        "run_at": "document_end",
        "js": ["login_success.js"]
    }],
    "options_ui": {
        "page": "options.html"
    },
    "browser_action": {
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        }
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon.png"
    },
    "permissions": [
        "https://api.stackexchange.com/2.1/inbox*",
        "notifications",
        "storage",
        "tabs"
    ],
    "web_accessible_resources": [
        "icon.png"
    ],
    "applications": {
        "gecko": {
            "id": "stackexchange-notifications@jetpack"
        }
    }
}
